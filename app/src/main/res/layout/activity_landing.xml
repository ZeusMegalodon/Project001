<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Login_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red2">


    <ImageView
        android:id="@+id/mountain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/red4"
        android:layout_marginBottom="-130dp"
        android:scaleType="centerCrop"
        android:src="@drawable/road" />

    <ImageView
        android:id="@+id/cloud3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/mountain"
        android:scaleType="centerCrop"
        android:src="@drawable/cloud3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/mountain"
        android:layout_marginTop="100dp"
        android:background="#56B697" />

    <ImageView
        android:id="@+id/red4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-60dp"
        android:scaleX="1.7"
        android:scaleY="1.3"
        android:src="@drawable/bg_red4" />

    <ImageView
        android:layout_width="@dimen/dimen_80dp"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_above="@id/red4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dimen_45dp"
        android:layout_marginBottom="-102dp"
        android:src="@drawable/motor" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/red4"
        android:layout_marginBottom="-90dp"
        android:src="@drawable/maps" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/cloud3"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginBottom="@dimen/dimen_35dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Kamu siap berpetualang bersama kami?"
            android:textAllCaps="true"
            android:textColor="@color/kuning"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Let's Go!!"
            android:textColor="@color/kuning"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bahasa"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:orientation="vertical"
        android:paddingHorizontal="50dp">

        <Button
            android:id="@+id/buatAkun"
            android:layout_width="match_parent"
            android:fontFamily="@font/poppins_bold"
            android:layout_height="wrap_content"
            android:text="Buat Akun"
            android:textAllCaps="false"
            android:textColor="@color/kuning" />


        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:backgroundTint="#D80147"
            android:text="Masuk ke Akun Saya"
            android:fontFamily="@font/poppins_bold"
            android:textAllCaps="false"
            android:textColor="@color/kuning" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bahasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Bahasa"
            android:textColor="@color/kuning" />

        <com.google.android.material.chip.Chip
            android:id="@+id/changeLang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:backgroundTint="@color/black2"
            android:fontFamily="@font/poppins_bold"
            android:paddingHorizontal="@dimen/dimen_8dp"
            android:paddingVertical="2dp"
            android:text="Inggris"
            android:textColor="@color/kuning" />
    </LinearLayout>
</RelativeLayout>
