<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D80147">

    <ImageView
        android:layout_above="@id/food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:src="@drawable/cloud" />

    <ImageView
        android:id="@+id/food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/food" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Jempoot makanan?\nBisa Banget!!!"
            android:textAllCaps="true"
            android:textColor="@color/kuning"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Pilih Makanan Favorit Kamu di Mr Jempoot. Tinggal Duduk Manis Langsung Jempoot"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/kuning" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/poppins"
            android:text="Lanjut"
            android:textColor="#D80147"
            android:textStyle="bold" />
    <ImageView
        android:id="@+id/board2Lanjut"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/app_name"
        android:rotationY="180"
        android:src="@drawable/left" />



    </LinearLayout>
</RelativeLayout>