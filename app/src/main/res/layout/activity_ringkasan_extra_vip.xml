<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kuning3">

    <LinearLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_red"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dimen_20dp"
        android:paddingVertical="@dimen/dimen_20dp">

        <ImageView
            android:id="@+id/finish"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/extra_vip"
            android:textColor="@color/kuning"
            android:textSize="@dimen/dimen_14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-10dp"
        android:layout_marginEnd="-10dp"
        android:layout_marginBottom="-200dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/bottom2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/pesanVip"
        android:layout_below="@id/bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/pilih_kendaraan"
                android:textColor="@color/red2"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rgKendaraan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/billis1"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginVertical="@dimen/dimen_5dp"
                    android:layout_marginEnd="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_border_red"
                    android:button="@null"
                    android:fontFamily="@font/poppins"
                    android:drawableTop="@drawable/ballis_1"
                    android:drawablePadding="@dimen/dimen_10dp"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/dimen_10dp"
                    android:text="@string/new_balis_black_and_white"
                    android:textColor="@color/red2"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <RadioButton
                    android:id="@+id/billis2"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginVertical="@dimen/dimen_5dp"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:fontFamily="@font/poppins"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_border_red"
                    android:button="@null"
                    android:drawableTop="@drawable/ballis_2"
                    android:drawablePadding="@dimen/dimen_10dp"
                    android:gravity="center"
                    android:padding="@dimen/dimen_10dp"
                    android:text="@string/new_balis_black_and_white"
                    android:textColor="@color/red2"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </RadioGroup>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_5dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/fasilitas_vip"
                android:textColor="@color/red2"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rgFasilitasVIP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/wifi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_border_red"
                    android:backgroundTint="@color/red2"
                    android:button="@null"
                    android:drawableTop="@drawable/wifi"
                    android:drawablePadding="@dimen/dimen_10dp"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:padding="@dimen/dimen_10dp"
                    android:text="@string/free_wifi"
                    android:textColor="@color/kuning"
                    android:textSize="11sp" />

                <RadioButton
                    android:id="@+id/charger"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dimen_5dp"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_border_red"
                    android:backgroundTint="@color/red2"
                    android:button="@null"
                    android:drawableTop="@drawable/charger"
                    android:drawablePadding="@dimen/dimen_10dp"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:padding="@dimen/dimen_10dp"
                    android:text="@string/baterai_charger"
                    android:textColor="@color/kuning"
                    android:textSize="11sp" />

                <RadioButton
                    android:id="@+id/ac"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dimen_5dp"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_border_red"
                    android:backgroundTint="@color/red2"
                    android:button="@null"
                    android:drawableTop="@drawable/ac"
                    android:drawablePadding="@dimen/dimen_10dp"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:padding="@dimen/dimen_10dp"
                    android:text="@string/air_conditioner"
                    android:textColor="@color/kuning"
                    android:textSize="11sp" />

            </RadioGroup>

            <LinearLayout
                android:id="@+id/tambahanFasilitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:text="@string/tambahan_fasilitas"
                    android:textColor="@color/red2"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/rgTambahan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/softDrink"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dimen_5dp"
                        android:layout_marginStart="@dimen/dimen_2dp"
                        android:layout_marginEnd="@dimen/dimen_5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_white_border_red"
                        android:button="@null"
                        android:drawableTop="@drawable/softdrink_red"
                        android:drawablePadding="@dimen/dimen_10dp"
                        android:enabled="false"
                        android:gravity="center"
                        android:padding="@dimen/dimen_10dp"
                        android:text="@string/soft_drink"
                        android:textColor="@color/red2"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <CheckBox
                        android:id="@+id/barTable"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dimen_5dp"
                        android:layout_marginStart="@dimen/dimen_5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_white_border_red"
                        android:button="@null"
                        android:drawableTop="@drawable/bar_table_red"
                        android:drawablePadding="@dimen/dimen_10dp"
                        android:enabled="false"
                        android:gravity="center"
                        android:padding="@dimen/dimen_10dp"
                        android:text="@string/bar_table"
                        android:textColor="@color/red2"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <CheckBox
                        android:id="@+id/barTable2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dimen_5dp"
                        android:layout_marginStart="@dimen/dimen_5dp"
                        android:layout_marginEnd="@dimen/dimen_2dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_white_border_red"
                        android:button="@null"
                        android:drawableTop="@drawable/bar_table_1_red"
                        android:drawablePadding="@dimen/dimen_10dp"
                        android:enabled="false"
                        android:gravity="center"
                        android:padding="@dimen/dimen_10dp"
                        android:text="@string/bar_table2"
                        android:textColor="@color/red2"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_8dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/pilih_alamat"
                android:textColor="@color/red2"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/red2"
                app:cardCornerRadius="@dimen/dimen_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/jemput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/dimen_0dp"
                        app:cardBackgroundColor="#FCFFA7"
                        app:cardCornerRadius="@dimen/dimen_30dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/dimen_20dp"
                            android:paddingVertical="@dimen/dimen_5dp">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/pick_start" />

                            <View
                                android:layout_width="@dimen/dimen_1dp"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="@dimen/dimen_10dp"
                                android:background="#919191" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="9"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:text="@string/jemput"
                                    android:textColor="#919191"
                                    android:textSize="@dimen/dimen_14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/start"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:maxLines="2"
                                    android:text="@string/pilih_alamat"
                                    android:textColor="@color/red2" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/pickUpText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_10dp"
                                android:fontFamily="@font/poppins"
                                android:text="@string/edit"
                                android:textColor="#919191" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:elevation="@dimen/dimen_0dp"
                        app:cardBackgroundColor="#FCFFA7"
                        app:cardCornerRadius="@dimen/dimen_30dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/dimen_20dp"
                            android:paddingVertical="@dimen/dimen_5dp">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/finish" />

                            <View
                                android:layout_width="@dimen/dimen_1dp"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="@dimen/dimen_10dp"
                                android:background="#919191" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="9"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:text="@string/tujuan"
                                    android:textColor="#919191"
                                    android:textSize="@dimen/dimen_14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/dest"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:maxLines="2"
                                    android:text="@string/pilih_alamat"
                                    android:textColor="@color/red2" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/destinationText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_10dp"
                                android:fontFamily="@font/poppins"
                                android:text="@string/edit"
                                android:textColor="#919191" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/detailOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_8dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:text="@string/detail_orderan"
                    android:textColor="@color/red2"
                    android:fontFamily="@font/poppins_bold"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_border_red"
                    android:backgroundTint="@color/red2"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_white_border_red"
                        android:backgroundTint="@color/kuning3"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen_8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/dimen_5dp"
                            android:orientation="horizontal"
                            android:weightSum="3">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_10dp"
                                android:fontFamily="@font/poppins"
                                android:layout_weight="1"
                                android:text="@string/jemput"
                                android:textColor="@color/red2"
                                android:textSize="14sp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/pickup"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_10dp"
                                android:layout_weight="2"
                                android:textColor="@color/red2"
                                android:fontFamily="@font/poppins"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/dimen_5dp"
                            android:orientation="horizontal"
                            android:weightSum="3">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_10dp"
                                android:fontFamily="@font/poppins"
                                android:layout_weight="1"
                                android:text="@string/tujuan"
                                android:textColor="@color/red2"
                                android:textSize="14sp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tujuan"
                                android:layout_width="0dp"
                                android:fontFamily="@font/poppins"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_10dp"
                                android:layout_weight="2"
                                android:textColor="@color/red2"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/dimen_5dp"
                            android:orientation="horizontal"
                            android:weightSum="3">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_10dp"
                                android:layout_weight="1"
                                android:text="@string/rute"
                                android:textColor="@color/red2"
                                android:fontFamily="@font/poppins"
                                android:textSize="14sp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/distance"
                                android:fontFamily="@font/poppins"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_10dp"
                                android:layout_weight="2"
                                android:textColor="@color/red2"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/dimen_5dp"
                            android:orientation="horizontal"
                            android:weightSum="3">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_10dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins"
                                android:text="@string/orderan"
                                android:textColor="@color/red2"
                                android:textSize="14sp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/trip"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:layout_marginStart="@dimen/dimen_10dp"
                                android:layout_weight="2"
                                android:textColor="@color/red2"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/dimen_8dp"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dash_horiz"
                            app:tint="@color/red2" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/dimen_5dp"
                            android:orientation="horizontal"
                            android:weightSum="2">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/poppins"
                                android:layout_marginStart="@dimen/dimen_10dp"
                                android:layout_toStartOf="@id/finalCost"
                                android:text="@string/total_pembayaran"
                                android:textColor="@color/red2"
                                android:textSize="14sp"
                                android:textStyle="bold" />


                            <me.abhinay.input.CurrencyEditText
                                android:id="@+id/finalCost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/dimen_10dp"
                                android:fontFamily="@font/poppins"
                                android:background="@drawable/button_round_1"
                                android:backgroundTint="@color/red2"
                                android:enabled="false"
                                android:paddingHorizontal="@dimen/dimen_10dp"
                                android:paddingVertical="@dimen/dimen_8dp"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/metode"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/pilih_pembayaran"
                    android:textColor="@color/red2"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/metode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:background="@drawable/button_round_1"
                    android:backgroundTint="@color/red2"
                    android:drawablePadding="@dimen/dimen_10dp"
                    android:fontFamily="@font/poppins"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/dimen_10dp"
                    android:paddingVertical="@dimen/dimen_8dp"
                    android:text="@string/cash"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/chevron_down"
                    app:drawableTint="@android:color/white" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/pesanVip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="@dimen/dimen_30dp"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginVertical="@dimen/dimen_8dp"
        android:backgroundTint="@color/black2"
        android:text="Pesan VIP"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />
</RelativeLayout>
