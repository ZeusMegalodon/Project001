<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="@dimen/dimen_4dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/radius_top"
        android:elevation="4dp"
        android:paddingVertical="@dimen/dimen_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/select"
                android:layout_width="match_parent"
                android:fontFamily="@font/poppins"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@drawable/back_select"
                android:text="" />

            <TextView
                android:fontFamily="@font/poppins"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:text="" />

            <TextView
                android:layout_width="match_parent"
                android:fontFamily="@font/poppins"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableStart="@drawable/dog_house"
                android:gravity="center"
                android:paddingHorizontal="6dp"
                android:fontFamily="@font/poppins"
                android:text="Home"
                android:textColor="@color/black2" />

            <TextView
                android:id="@+id/cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:paddingHorizontal="6dp"
                android:text="Cart"
                android:textColor="@color/kuning"
                app:drawableStartCompat="@drawable/shopping_bags" />

            <TextView
                android:id="@+id/history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="6dp"
                android:text="History"
                android:textColor="@color/kuning"
                app:drawableStartCompat="@drawable/file" />

            <TextView
                android:id="@+id/wishlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:paddingHorizontal="6dp"
                android:text="Wishlist"
                android:textColor="@color/kuning"
                app:drawableStartCompat="@drawable/ic_heart" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/nav"
        android:layout_alignParentTop="true" />
</RelativeLayout>