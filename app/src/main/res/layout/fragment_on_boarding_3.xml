<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D80147">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/ic_on_boarding___3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Siap Antar Jempoot Kamu\nKemana Aja!!!"
            android:textAllCaps="true"
            android:textColor="@color/kuning"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Mau Kemana Aja Sekarang Bebas,\nAda Mr Jempoot yang Selalu Siap Antar"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/kuning" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dimen_45dp"
        android:layout_marginBottom="@dimen/dimen_45dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/poppins"
            android:text="Lanjut"
            android:textColor="#D80147"
            android:textStyle="bold" />

    <ImageView
        android:id="@+id/board3Lanjut"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/app_name"
        android:rotationY="180"
        android:src="@drawable/left" />

    </LinearLayout>
</RelativeLayout>